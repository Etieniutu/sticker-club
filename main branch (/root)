  <script>
    let cart = JSON.parse(localStorage.getItem('stickerCart')) || [];

    function addToCart(name, price) {
      cart.push({ name, price });
      localStorage.setItem('stickerCart', JSON.stringify(cart));
      updateCart();
    }

    function updateCart() {
      const cartList = document.getElementById("cart");
      const totalEl = document.getElementById("total");
      const checkoutBtn = document.getElementById("checkoutBtn");

      cartList.innerHTML = "";
      let total = 0;
      cart.forEach(item => {
        const li = document.createElement("li");
        li.textContent = `${item.name} - $${item.price}`;
        cartList.appendChild(li);
        total += item.price;
      });

      totalEl.textContent = total;

      const message = encodeURIComponent(`Â¡Hola! Quiero pedir estos stickers:%0A${cart.map(i => `- ${i.name} ($${i.price})`).join('%0A')}%0ATotal: $${total}`);
      checkoutBtn.href = `https://wa.me/543435354050?text=${message}`;
    }

    function sendCustomOrder(event) {
      event.preventDefault();
      const customMsg = document.getElementById("customMsg").value;
      if (!customMsg.trim()) {
        alert("Por favor, escribÃ­ tu pedido personalizado.");
        return;
      }
      const encoded = encodeURIComponent("Â¡Hola! Quiero un pedido personalizado:%0A" + customMsg);
      window.open(`https://wa.me/543435354050?text=${encoded}`, '_blank');
    }

    updateCart();
  </script>
